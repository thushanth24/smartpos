{
  "name": "smartpos-backend",
  "version": "1.0.0",
  "description": "Backend for SmartPOS (Point of Sale) System",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "db:init": "node scripts/db-init.js",
    "db:migrate": "node --experimental-json-modules scripts/run-migration.js",
    "db:migrate:undo": "echo 'Use direct SQL to undo migrations if needed'",
    "db:seed": "node --experimental-json-modules scripts/run-seed.js",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
    "setup:neon": "node --experimental-json-modules scripts/setup-neon-db.js",
    "docker:build": "docker build -t smartpos-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env smartpos-backend",
    "docker:compose:up": "docker-compose up -d --build",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:compose:restart": "docker-compose restart",
    "docker:compose:ps": "docker-compose ps",
    "docker:compose:exec": "docker-compose exec app sh",
    "create:superadmin": "node --experimental-json-modules scripts/create-superadmin.js"
  },
  "keywords": [
    "pos",
    "point-of-sale",
    "nodejs",
    "express",
    "supabase"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "http-errors": "^2.0.0",
    "http-status": "^2.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "request-ip": "^3.3.0",
    "response-time": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
